<%- include('../../layouts/main', { title: title }) %>

<div class="auth-container">
    <div class="auth-card">
        <div class="text-center mb-4">
            <i class="bi bi-envelope-check text-primary" style="font-size: 3rem;"></i>
        </div>
        <h2 class="card-title text-center mb-4">Check Your Email</h2>
        
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-success" role="alert">
                <%= message %>
            </div>
        <% } %>

        <div class="text-center mb-4">
            <p>We've sent a verification email to:</p>
            <p class="fw-bold"><%= email %></p>
            <p>Please check your email and click the verification link to activate your account.</p>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted">Didn't receive the email?</p>
            <a href="<%= resendUrl %>" class="btn btn-outline-primary">
                <i class="bi bi-arrow-repeat me-2"></i>Resend Verification Email
            </a>
        </div>

        <div class="text-center mt-4">
            <p>Already verified? <a href="/auth/login">Login here</a></p>
        </div>
    </div>
</div>